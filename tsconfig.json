{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "strictPropertyInitialization": false
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "src/Migrations/*.js",
    ],
    "exclude": [
        "node_modules",
    ]
}
