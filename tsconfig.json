{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "allowJs": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "strictPropertyInitialization": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
